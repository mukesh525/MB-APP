<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/primary_light</item>
        <item name="android:windowBackground">@color/icons</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:fitsSystemWindows">true</item>-->
        <!-- <item name="android:textColor">@color/icons</item>-->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:actionMenuTextColor">@color/primary_text</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--   <item name="android:actionOverflowButtonStyle">@android:color/white</item>-->
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>


    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="StyledDialog" parent="@android:style/Theme.Panel">
        <item name="android:background">@color/spinner</item>
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/spinner</item>
        <item name="android:bottomDark">@color/spinner</item>
        <item name="android:bottomMedium">@color/spinner</item>
        <item name="android:centerBright">@color/spinner</item>
        <item name="android:centerDark">@color/spinner</item>
        <item name="android:centerMedium">@color/spinner</item>
        <item name="android:fullBright">@color/spinner</item>
        <item name="android:fullDark">@color/spinner</item>
        <item name="android:topBright">@color/spinner</item>
        <item name="android:topDark">@color/spinner</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="android:textColor">#f00</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Widget.MyApp.HeaderBar.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <!--<item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>-->
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>

    </style>


</resources>
