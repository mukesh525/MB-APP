<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:alpha="0.7"
    android:background="@color/spinner"
    android:padding="10dp">


    <TextView
        android:id="@+id/txtLabel"
        style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Small"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:text="New Text"
        android:textColor="@color/background_floating_material_dark"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/txtValue"
        style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtLabel"
        android:textColor="#E65100"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtDateTime"
        style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtLabel"
        android:text="vdvd"
        android:textStyle="bold"
        android:visibility="gone" />


    <EditText
        android:id="@+id/etSingleLine"
        style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txtLabel"
        android:layout_toRightOf="@+id/txtLabel"
        android:layout_weight="1"
        android:focusableInTouchMode="true"
        android:textColor="#E65100" />

    <EditText
        android:id="@+id/etMultiLine"
        style="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtLabel"
        android:layout_weight=".6"
        android:imeOptions="normal"
        android:maxHeight="30dp"
        android:maxLines="3"
        android:minLines="2"
        android:textColor="#E65100"
        android:visibility="gone">

    </EditText>


    <Spinner
        android:id="@+id/spDropdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/txtLabel"
        android:layout_weight=".6"
        android:elevation="@dimen/abc_text_size_body_2_material"
        android:spinnerMode="dialog"
        android:visibility="gone"

        />

    <ListView
        android:id="@+id/lvOptions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/txtLabel"
        android:layout_weight=".6"
        android:choiceMode="multipleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lvChoice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/txtLabel"
        android:layout_weight=".6"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp"
        android:visibility="gone" />

</RelativeLayout>