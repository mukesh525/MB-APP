<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_track_details_folloup_followup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_port">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/spinner"
        android:layout_height="wrap_content">


        <ListView
            android:id="@+id/track_details_followup_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ProgressBar
            android:layout_below="@id/track_details_followup_list_view"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="15.0dip"
            android:indeterminate="true"
            android:indeterminateDrawable="@xml/progress" />

        <LinearLayout
            android:layout_marginTop="30.0dip"
            android:layout_below="@+id/track_details_followup_list_view"
            android:id="@+id/tRetryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:visibility="visible">


            <Button
                android:id="@+id/btnSubmit"
                android:layout_marginTop="60.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/trackDetailProgressBar"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/trackDetailProgressBar"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_background"
                android:text="Submit"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>